<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#e18888"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/item_header_workplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="3"
                        android:inputType="textPersonName"
                        android:text="Gent SP" />

                    <EditText
                        android:id="@+id/item_header_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/item_header_workplace"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        android:text="STATUS" />
                </LinearLayout>

                <EditText
                    android:id="@+id/item_header_traincoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:ems="30"
                    android:inputType="textPersonName"
                    android:text="MX89 - 789456"
                    android:textStyle="bold"/>
            </LinearLayout>

            <EditText
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="This is the description of an issue." />

        </LinearLayout>

    </RelativeLayout>